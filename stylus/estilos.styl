a
	text-decoration none
body
	font-size 16px
figure
	margin 0
img
	vertical-align top

//buttons
.btn-menu
	color gris_oscuro
	float left
	font-size 2em
	left .7em
	position relative
	text-decoration none
	top .7em
.action
	color white
	cursor pointer
	font-size 1.5em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_oscuro
//oocss classes
.image
	position relative
.actions
	background rgba(black,.2)
	bottom 0
	left 0
	padding 1.5em
	position absolute
	right 0
	text-align right
.name
	color gris_oscuro
.author
	color gris_claro
.center
	text-align center
.padding-container
	padding 2.8rem
.padding-asset
	padding 1.8rem 0
.border-bottom
	border-bottom 1px solid gris_claro
.left
	float left
.right
	float right
.relative
	position relative
.pull-left
	left 0
	position absolute
	top -4px
.pull-right
	position absolute
	right 0
	top -4px
.line
	.min
	.max
		font-size .8em
	.total
		background gris_claro
		height 5px
		width 75%
		margin 0 auto
		border-radius 5px
	.rep
		background rojo
		height 5px
		width 30%
		position relative
		border-radius 5px 0 0 5px
	.circle
		background black
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2.2px
		width 10px
.container
	font-size 0
	text-align center
.header
	text-align center
	.title
		font-size 1.2em
		height 4em
		line-height 4em

.menu
	display none
.play
	&.small
		margin 0 auto
		width 20em
// .playing
